  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server & Open Browser",
      "program": "${workspaceFolder}/server.js",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Server running at (https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
